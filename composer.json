{
    "name": "webkult/plentyone-saloon-api",
    "description": "PHP SDK for the plentymarkets/plentyOne REST API, built with Saloon.",
    "type": "library",
    "license": "CC-BY-SA-4.0",
    "authors": [
        {
            "name": "Benjamin Klein",
            "email": "info@webkult.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/saloon": "^3.0",
        "saloonphp/pagination-plugin": "^2.0",
        "spatie/laravel-data": "^3.0|^4.0"
    },
    "require-dev": {
        "crescat-io/saloon-sdk-generator": "^1.4",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "PlentyOne\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PlentyOne\\Api\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "PlentyOne\\Api\\Laravel\\PlentyOneServiceProvider"
            ]
        }
    },
    "suggest": {
        "laravel/framework": "FÃ¼r Nutzung in Laravel (Config, Service Provider, Dependency Injection).",
        "saloonphp/laravel-plugin": "Saloon Laravel-Integration (z. B. Saloon::fake() in Tests)."
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "generate": [
            "sdkgenerator generate:sdk openapi/plentymarkets-openapi.json --type=openapi --name=PlentyOne --namespace=PlentyOne\\\\Api --output=src --force"
        ],
        "test": [
            "vendor/bin/pest"
        ],
        "test:coverage": [
            "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
        ]
    }
}
